rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    // App uploads structure:
    // accounts/{uid}/projects/{projectId}/finance/{entryId}/{fileName}
    // accounts/{uid}/projects/{projectId}/metrics/{stageId}/{metricId}/{entryId}/{fileName}
    match /accounts/{uid}/projects/{projectId}/{allPaths=**} {
      allow read, write: if isOwner(uid);
    }
  }
}
