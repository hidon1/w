rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return signedIn() && request.auth.uid == uid;
    }

    function isPermittedOwner(ownerUid) {
      return signedIn() && (
        request.auth.uid == ownerUid ||
        exists(/databases/$(database)/documents/accounts/$(ownerUid)/permissions/$(request.auth.uid))
      );
    }

    function canEditOwner(ownerUid) {
      return signedIn() && (
        request.auth.uid == ownerUid ||
        get(/databases/$(database)/documents/accounts/$(ownerUid)/permissions/$(request.auth.uid)).data.allowEdit == true
      );
    }

    // Email index: every signed-in user can read (needed for account linking by email).
    match /usersByEmail/{lookupKey} {
      allow read: if signedIn();
      allow create, update: if signedIn() && request.resource.data.uid == request.auth.uid;
      allow delete: if false;
    }

    match /accounts/{accountUid} {
      allow read: if isOwner(accountUid);
      allow create, update: if isOwner(accountUid);
      allow delete: if false;

      // Owner data (projects, reminders, settings, etc.)
      match /data/{docId} {
        allow read: if isPermittedOwner(accountUid);
        allow create, update: if canEditOwner(accountUid);
        allow delete: if isOwner(accountUid);
      }

      // Owner grants access to collaborators.
      match /permissions/{collaboratorUid} {
        allow read: if isOwner(accountUid) || request.auth.uid == collaboratorUid;
        allow create, update: if isOwner(accountUid)
          && request.resource.data.ownerUid == accountUid
          && request.resource.data.collaboratorUid == collaboratorUid;
        allow delete: if isOwner(accountUid);
      }

      // Synced list for the collaborator side.
      match /sharedWith/{ownerUid} {
        allow read: if isOwner(accountUid);
        allow create, update, delete: if request.auth.uid == ownerUid;
      }
    }
  }
}
